@model IEnumerable<ImportXmlToJson.Models.Contract>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <script type="text/javascript" src="https://unpkg.com/xlsx@0.15.1/dist/xlsx.full.min.js"></script>

    
</head>

<body>


    <h1>Загрузка данных</h1>

    <p>
        <a asp-action="Create">Добавить новую запись вручную</a>
    </p>
    <h5>Введите путь к EXCEL файлу на нажмите кнопку "Загрузить".</h5>
    <input type="file" id="excel_file" />
    <div id="excel_data" class="mt-5"></div>

    <button type="button" class="btn btn-outline-warning">
        <div>
            Загрузить
        </div>
    </button>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Shifr_Contract)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name_Contract)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Seller)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Shifr_Contract)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name_Contract)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Seller)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Добавить</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Информация</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
}
        </tbody>
    </table>
</body>

<script>

    const excel_file = document.getElementById('excel_file');

    excel_file.addEventListener('change', (event) => {

        var reader = new FileReader();

        reader.readAsArrayBuffer(event.target.files[0]);
        reader.onload = function (event) {
            var data = new Uint8Array(reader.result);

            var work_book = XLSX.read(data, { type: 'array' });

            var sheet_name = work_book.SheetNames;

            var sheet_data = XLSX.utils.sheet_to_json(work_book.Sheets[sheet_name[0]], { header: 1 });

            if (sheet_data.length > 0) {
                var table_output = '<table class="table table-striped table-bordered">';

                for (var row = 0; row < sheet_data.length; row++) {

                    table_output += '<tr>';

                    for (var cell = 0; cell < sheet_data[row].length; cell++) {

                        if (row == 0) {

                            table_output += '<th>' + sheet_data[row][cell] + '</th>';

                        }
                        else {

                            table_output += '<td>' + sheet_data[row][cell] + '</td>';

                        }

                    }

                    table_output += '</tr>';

                }

                table_output += '</table>';

                document.getElementById('excel_data').innerHTML = table_output;
            }

        }
    });
</script>