@model ImportXmlToJson.Models.Contract

@{
    ViewData["Title"] = "Edit";
}

<h1>Добавить</h1>

<h4>Договор</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Добавить">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Shifr_Contract" class="control-label"></label>
                <input asp-for="Shifr_Contract" class="form-control" />
                <span asp-validation-for="Shifr_Contract" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name_Contract" class="control-label"></label>
                <input asp-for="Name_Contract" class="form-control" />
                <span asp-validation-for="Name_Contract" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seller" class="control-label"></label>
                <input asp-for="Seller" class="form-control" />
                <span asp-validation-for="Seller" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
